{
  "name": "my-special-way-server",
  "version": "0.0.19",
  "description": "server-for-my-special-way-android/portal",
  "author": "my-special-way",
  "license": "MIT",
  "scripts": {
    "build": "bash ./scripts/build",
    "bump": "yarn version --new-version patch",
    "docker": "bash ./scripts/docker",
    "docker:push": "bash ./scripts/docker-push",
    "format": "prettier --write \"**/*.ts\"",
    "git:push": "./scripts/git-push",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rm -rf dist && tsc",
    "start:prod": "node dist/main.js",
    "start:hmr": "node dist/server",
    "test:ut": "jest --coverage",
    "test:e2e": "jest --config ./test/jest-e2e.json --coverage ",
    "test:ci": "bash ./scripts/test",
    "test": "jest && jest --config ./test/jest-e2e.json",
    "tslint": "tslint -c tslint.json src/**/*.ts",
    "webpack": "webpack --config webpack.config.js"
  },
  "dependencies": {
    "@nestjs/common": "^5.0.0-beta.6",
    "@nestjs/core": "^5.0.0-beta.6",
    "@nestjs/graphql": "^3.0.0",
    "@nestjs/microservices": "^5.0.0-beta.6",
    "@nestjs/passport": "^1.0.10",
    "@nestjs/testing": "^5.0.0-beta.6",
    "@nestjs/websockets": "^5.0.0-beta.6",
    "apollo-server-express": "^1.3.6",
    "fastify-formbody": "^2.0.0",
    "global": "^4.3.2",
    "graphiql": "^0.11.11",
    "graphql": "^0.13.2",
    "graphql-tools": "^3.0.2",
    "jsonwebtoken": "^8.2.1",
    "passport": "^0.4.0",
    "passport-jwt": "^4.0.0",
    "reflect-metadata": "^0.1.12",
    "rxjs": "^6.0.0",
    "typescript": "^2.8.3"
  },
  "devDependencies": {
    "@playlyfe/gql": "^2.6.0",
    "@types/express": "^4.0.39",
    "@types/jest": "^21.1.8",
    "@types/jsonwebtoken": "^7.2.7",
    "@types/node": "^9.3.0",
    "@types/passport": "^0.4.5",
    "@types/passport-jwt": "^3.0.1",
    "@types/supertest": "^2.0.4",
    "codecov": "^3.0.2",
    "jest": "^23.0.1",
    "nodemon": "^1.14.1",
    "prettier": "^1.11.1",
    "supertest": "^3.0.0",
    "ts-jest": "22.4.4",
    "ts-loader": "^4.1.0",
    "ts-node": "^4.1.0",
    "tsconfig-paths": "^3.1.1",
    "tslint": "5.3.2",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.13",
    "webpack-node-externals": "^1.6.0"
  },
  "jest": {
    "automock":false,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts",
      "tsx"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  }
}
