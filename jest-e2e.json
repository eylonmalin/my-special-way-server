{
  "rootDir": ".",
  "testRegex": ".e2e-spec.ts$",
  "coverageDirectory": "../coverage",
  "globalSetup": "./test/utils/startup.ts",
  "globals": {
    "ts-jest": {
      "ignoreCoverageForDecorators": true
    }
  },
  "transform": {
    "^.+\\.tsx?$": "ts-jest"
  },
  "moduleDirectories": [
    "node_modules",
    "../node_modules"
  ],
  "moduleFileExtensions": [
    "ts",
    "tsx",
    "js",
    "jsx",
    "json",
    "node"
  ],
  "collectCoverageFrom": [
    "src/**/*.ts",
    "!src/main.ts",
    "!src/main.hmr.ts",
    "!src/**/*.spec.ts",
    "!src/**/*.temp.ts",
    "!src/config/environments/*"
  ]
}